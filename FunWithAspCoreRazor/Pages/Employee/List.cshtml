@page
@model MyApp.Namespace.ListModel
@{
    ViewData["Title"] = "List of employees";
}

<h1>List of employees</h1>

<table>
    <thead>
        <tr>
            <th>
                @Html.Label(string.Empty)
            </th>
            <th>
                @Html.Label("First name")
            </th>
            <th>
                @Html.Label("Last name")
            </th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model.Employees)
        {
            i++;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
            </tr>
        }
    </tbody>
</table>